<section class='new_recipe'>
	<h2>Enter a new recipe:</h2>

	<article class='recipe_form'>
		<form id='new_recipe'action="/recipes" method="post">
		  <input class='input_text' type="text" name="title" placeholder='Dish name' ></br>
		  <textarea name='ingredients' placeholder='Ingredients (each ingredient must be followed by a comma)' ></textarea></br>
		  </br> <textarea name='description' placeholder='Method' ></textarea></br>
		  <input class='input_text' type="text" name="tags" placeholder='Tags' >
		  <input class='add_recipe button' type="submit" value="Submit Recipe">
		</form>
	</article>
</section>
